<html>
	<head>
		<title>SupperSlonic</title>
		<link href="~/Content/css/main.css" rel="stylesheet" type="text/css" />
		<link href="~/Content/css/helpspot.css" rel="stylesheet" type="text/css" />
		<script type="text/javascript" src="~/Content/js/tabWidget.js"></script>
        <script type="text/javascript">
            function setCurrentMenu(controllerName, actionName)
            {
                if (actionName == "About")
                    controllerName = "About";

                document.getElementById("mn" + controllerName).className = "selected";
            }
            function showSubMenu(menuId)
            {
                document.getElementById(menuId + "Items").style.display = "block";
            }
            function hideSubMenu(menuId) {
                document.getElementById(menuId + "Items").style.display = "none";
            }
        </script>
	</head>
<body onload="javascript:setCurrentMenu('@ViewContext.RouteData.Values["controller"]', '@ViewContext.RouteData.Values["action"]');">
	<div id="body-bg">
		<div id="body-wrap">
			<ul id="main-nav">
				<li id="mnHome">@Html.ActionLink("HOME", "Index", "Home")</li>
                <li id="mnWebDev" onmouseover="javascript:showSubMenu(this.id);" onmouseout="javascript:hideSubMenu(this.id);">@Html.ActionLink("Web Development", "Index", "WebDev")
                    <div id="mnWebDevItems" class="submenu">
                        <ul>
                            <li>@Html.ActionLink("Vertical Tabs", "VerticalTabs", "WebDev")</li>
                            <li>@Html.ActionLink("Weekly Schedule", "WeeklySchedule", "WebDev")</li>
                        </ul>
                    </div>
                </li>
				<li id="mnAWS" onmouseover="javascript:showSubMenu(this.id);" onmouseout="javascript:hideSubMenu(this.id);">@Html.ActionLink("Amazon Web Services", "Index", "AWS")
                    <div id="mnAWSItems" class="submenu">
                         <ul>
                            <li>@Html.ActionLink("Amazon Context", "AmazonContext", "AWS")</li>
                            <li>@Html.ActionLink("Elastic Map Reduce", "ElasticMapReduce", "AWS")</li>
                            <li>@Html.ActionLink("DynamoDB", "DynamoDB", "AWS")</li>
                        </ul>
                    </div>
				</li>
                <li id="mnAbout">@Html.ActionLink("About me", "About", "Home")</li>
			</ul>
			<div id="page">
				<div id="header-logo">@Html.ActionLink("home", "Index", "Home")</div>
				<div id="content">@RenderBody()</div> <!-- page -->
			</div>
		</div> <!-- body-wrap -->
	</div> <!-- body-bg -->
    @Html.Partial("HelpSpotWidget")
</body>
</html>